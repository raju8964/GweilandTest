<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleTest" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>
    <style name="normaltext">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/appcolor</item>
        <item name="android:background">@drawable/edittext_ui_dr</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:digits">@string/alphabets</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">25</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>
    <!--    username input field-->
    <style name="normalInputField">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/appcolor</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/edittext_ui_dr</item>
        <item name="android:maxLength">25</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>
    <style name="emailField">
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/appcolor</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:background">@drawable/edittext_ui_dr</item>
        <item name="android:maxLength">25</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:imeOptions">actionNext</item>
    </style>
    <style name="phoneInputField">
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/edittext_ui_dr</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/appcolor</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxLength">10</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">number</item>
    </style>

    <!--    back button-->
    <style name="backbutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_30sdp</item>
        <item name="android:layout_marginEnd">@dimen/_10sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/appcolor</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>